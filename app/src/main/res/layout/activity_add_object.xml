<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.acy.iut.fr.lesbonsplansdeliut.AddObject"
            android:id="@+id/all">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Titre"
                android:id="@+id/TextView" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titreObjet"
                android:layout_below="@+id/TextView"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Description"
                android:id="@+id/Textviex2"
                android:layout_below="@+id/titreObjet"
                android:layout_alignParentStart="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionObjet"
                android:layout_below="@+id/Textviex2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="CatÃ©gorie"
                android:id="@+id/textView10"
                android:layout_below="@+id/descriptionObjet"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinnerCategories"
                android:layout_below="@+id/textView10"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix"
                android:id="@+id/textView"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_below="@+id/spinnerCategories"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/Textviex2" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prix"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/photo1"
                android:layout_below="@+id/prix"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/button3"
                android:layout_alignEnd="@+id/textView" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/btnAddPhoto"
                android:onClick="ClickAddPhotoBtn"
                android:layout_below="@+id/photo1"
                android:layout_alignStart="@+id/spinnerCategories"
                android:layout_alignEnd="@+id/photo1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminer"
                android:id="@+id/button3"
                android:layout_below="@+id/btnAddPhoto"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/photo3"
                android:layout_below="@+id/prix"
                android:layout_alignEnd="@+id/prix"
                android:layout_toEndOf="@+id/button3"
                android:layout_alignStart="@+id/btnAddPhoto3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/btnAddPhoto3"
                android:layout_below="@+id/photo3"
                android:layout_alignEnd="@+id/spinnerCategories"
                android:onClick="ClickAddPhotoBtn" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:id="@+id/photo2"
                android:layout_alignTop="@+id/photo1"
                android:layout_alignStart="@+id/button3"
                android:layout_alignEnd="@+id/button3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/btnAddPhoto2"
                android:layout_below="@+id/photo2"
                android:layout_alignStart="@+id/photo2"
                android:onClick="ClickAddPhotoBtn" />


        </RelativeLayout>
    </ScrollView>

