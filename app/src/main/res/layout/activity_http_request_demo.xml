<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView02"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HttpRequestDemo"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/ciel">


    <ImageView
        android:layout_width="158dp"
        android:layout_height="152dp"
        android:id="@+id/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:id="@+id/button"
        android:clickable="true"
        android:onClick="InscriptionClick"
        android:layout_above="@+id/username"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_accueil"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/username"
        android:layout_alignBottom="@+id/tamer"
        android:layout_alignParentEnd="true"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:layout_alignStart="@+id/password"
        android:hint="Login"
        android:background="@drawable/champs_login"
        android:layout_margin="10dp"
        android:padding="5dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:imeOptions="actionSend"
        android:singleLine="true"
        android:layout_alignBottom="@+id/textView3"
        android:hint="Mot de passe"
        android:layout_alignParentEnd="true"
        android:background="@drawable/champs_login"
        android:layout_margin="10dp"
        android:padding="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connexion..."
        android:id="@+id/submit"
        android:onClick="loginClick"
        android:layout_above="@+id/progressBarMesObjets"
        android:layout_alignStart="@+id/button"
        android:background="@drawable/button_accueil"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarMesObjets"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:indeterminate="false"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_alignTop="@+id/progressBarMesObjets"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
    </ScrollView>
